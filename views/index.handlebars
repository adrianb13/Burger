<h1>Eat Da Burger!</h1>

<h2><span>Eat Me!!!!</span></h2>

<ul class="container">
    {{#each burgers}}
        {{#unless this.devoured}}

            <li>{{this.burger_name}}
            	<button class="change-devoured" data-id="{{id}}" data-devoured="{{devoured}}">
                    {{#if this.devoured}}DEVOURED{{else}}DEVOUR IT{{/if}}
            	</button>
            </li>
        {{/unless}}
    {{/each}}
</ul>

<h2><span>Devoured! That Was Good!</span></h2>

<ul class="container">
    <p class="eaten">In Your Belly</p>
    {{#each burgers}}
        {{#if devoured}}
            <li>{{this.burger_name}}
            	<button class="order-devoured" data-id="{{id}}" data-devoured="{{false}}">
                    {{#if this.devoured}}ORDER AGAIN{{else}}DEVOURED{{/if}}
            	</button>
            </li>
        {{/if}}
    {{/each}}
</ul>

<h2><span>Add A Burger!</span></h2>
<form class="addBurger">
    <div>
        <label for="burger">Burger Name:</label>
        <input type="text" id="burger" name="burger_name">
    </div>
    <br>
    <button type="submit" id="submit">Add Burger</button>
</form>